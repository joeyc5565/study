{
    "$schema": "https://raw.githubusercontent.com/revisit-studies/study/main/src/parser/StudyConfigSchema.json",
    "studyMetadata": {
        "title": "Basic Questionnaire Study",
        "version": "pilot",
        "authors": [
            "The reVISit Team"
        ],
        "date": "2024-03-19",
        "description": "A simple questionnaire study",
        "organizations": [
            "University of Utah",
            "WPI",
            "University of Toronto"
        ]
    },
    "uiConfig": {
        "contactEmail": "contact@revisit.dev",
        "helpTextPath": "basic-questionnaire-study/assets/help.md",
        "logoPath": "revisitAssets/revisitLogoSquare.svg",
        "withProgressBar": true,
        "autoDownloadStudy": false,
        "sidebar": true
    },
    "components": {
        "introduction": {
            "type": "website",
            "path": "basic-questionnaire-study/assets/sum.html",
            "response": []
        },
        "first-question": {
            "type": "website",
            "path": "basic-questionnaire-study/assets/q1.html",
            "response": []
        },
        "second-question": {
            "type": "website",
            "path": "basic-questionnaire-study/assets/q1.html",
            "response": []
        },
        "third-question-set": {
            "type": "questionnaire",
            "response": [
                {
                    "id": "q3-bw-more",
                    "prompt": "Quickly scan the charts across and try to find out which chart is easiest to read. If you need a pointer regarding this try to find out how much there is of item a, and then select the chart that communicates this.",
                    "required": true,
                    "location": "aboveStimulus",
                    "type": "longText",
                    "placeholder": "Please enter your first name"
                }
            ]
        },
        "fourth-question-set": {
            "type": "questionnaire",
            "response": [
                {
                    "id": "q4-satisfaction",
                    "prompt": "Rate your satisfaction with this survey from 1 (not enjoyable) to 5 (very enjoyable).",
                    "required": true,
                    "location": "aboveStimulus",
                    "type": "likert",
                    "leftLabel": "Not Enjoyable",
                    "rightLabel": "Very Enjoyable",
                    "numItems": 5
                }
            ]
        }
    },
    "sequence": {
        "order": "fixed",
        "components": [
            "introduction",
            "first-question",
            "second-question",
            "third-question-set",
            "fourth-question-set"
        ]
    }
}